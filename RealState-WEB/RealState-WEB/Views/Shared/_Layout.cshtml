<body>
    <!-- ======= Header/Navbar ======= -->
    <nav class="navbar navbar-default navbar-reduce navbar-expand-lg fixed-top">
        <div class="container">
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarDefault" aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a class="navbar-brand text-brand" asp-controller="Home" asp-action="Index">Real <span class="color-b"> State</span></a>

            <div class="navbar-collapse collapse justify-content-center" id="navbarDefault">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link active">Inicio</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Propiedades" asp-action="Propiedades" class="nav-link ">Propiedades</a>
                    </li>
                    <!--Dropdown para las opciones de administrador-->
                    @{
                        long IdRol = 2;
                        if (true) // OJO falta aqui poner la validacion de Session HttpContext.Current.Session.Count > 0
                        {
                            //IdRol = long.Parse(HttpContext.Current.Session["IdRol"].ToString()); if (true) // OJO falta aqui poner la validacion de Session HttpContext.Current.Session.Count > 0
                        }
                    }
                    @if (IdRol == 1)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Administrativo</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="Usuarios" asp-route="ConsultarUsuarios">Usuarios</a>
                                <a class="dropdown-item" asp-action="Propiedades" asp-route="Propiedades">Usuarios</a>
                            </div>
                        </li>
                    }
                    <!--Dropdown para las opciones de Usuario-->
                    @if (true) // OJO falta aqui poner la validacion de Session HttpContext.Current.Session.Count > 0
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Usuario</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Usuarios" asp-action="MiPerfil">Mi Perfil</a>
                                <a class="dropdown-item" asp-controller="Usuarios" asp-action="MisCitas">Mis Citas </a>
                            </div>
                        </li>
                    }
                    <li class="nav-item">
                        @{
                            if (true) // OJO falta aqui poner la validacion de Session HttpContext.Current.Session.Count > 0
                            {
                                <a class="nav-link" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesión</a>
                            }
                            else
                            {
                                <a class="nav-link " asp-controller="Home" asp-action="IniciarSesion">Ingresar</a>
                            }
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

